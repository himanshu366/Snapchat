<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="314dp"
            android:layout_height="74dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailEditText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="47dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="46dp" android:hint="Email"
            android:selectAllOnFocus="true"/>
    <EditText
            android:layout_width="314dp"
            android:layout_height="74dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/emailEditText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="49dp" android:hint="Password"/>
    <Button
            android:text="GO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goButton" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="170dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="153dp" android:onClick="goClicked"/>

</android.support.constraint.ConstraintLayout>